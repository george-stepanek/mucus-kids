extends ../layouts/default

block content
	.container
		article
			if !data.post
				h3 Post does not exist for this URL.
			else
				header
					h2= data.post.title
					p.lead.text-muted Posted 
						if data.post.publishedDate
							| on #{data.post._.publishedDate.format('MMMM Do, YYYY')} 
				.post
					if data.post.image.exists
						p
							.image-wrap: img(src=data.post._.image.fit(750,450)).img-responsive
					p!= data.post.content
					br
					p
						a.social(target="_blank", title="Share it", href="https://www.facebook.com/sharer/sharer.php?u=" + url)
							i.fa.fa-facebook
						a.social(target="_blank", title="Tweet it", href="https://twitter.com/intent/tweet?tw_p=tweetbutton&url=" + url + "&text=" + data.post.title)
							i.fa.fa-twitter
						a.social(target="_blank" title="Pin it", href="https://www.pinterest.com/pin/create/button/?url=" + url + "&description=" + data.post.title + (data.post.image.exists ? "&media=" + data.post.image.url : ""))
							i.fa.fa-pinterest
						a.social(target="_blank" title="Tumblr it" href="https://www.tumblr.com/widgets/share/tool?canonicalUrl=" + url + "&title=" + data.post.title)
							i.fa.fa-tumblr

